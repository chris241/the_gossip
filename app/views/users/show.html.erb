<!--Afficher l'auteur associé au potin-->

<div class="card text-center">
<div class="card">
  <h5 class="card-header">Prénom :<%= @user.first_name%></h5>
  <div class="card-body">
	<h5 class="card-title">Nom :<%= @user.last_name%></h5>
    <p class="card-text">E-mail :<%= @user.email%></p>
    <p class="card-text">Age : <%= @user.age%> ans </p>
    <p class="card-text"><%= @user.description%></p>
    <p class="card-text">Ville :<%= @user.city.name%></p>
    <a href="/" class="btn btn-primary">Retour aux potins</a>
  </div>
</div>
</div>